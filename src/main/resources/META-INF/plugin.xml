  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <!--  <idea-version since-build="145.0"/>-->

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <depends>com.intellij.modules.java</depends>
  <depends>org.jetbrains.plugins.gradle</depends>
  <depends>org.jetbrains.idea.grammar</depends>

  <extensions defaultExtensionNs="com.intellij">


    <braceMatcher filetype="Xtext" implementationClass="com.intellij.xtextLanguage.xtext.XtextBraceMatcher"/>
    <lang.braceMatcher language="Xtext"
                       implementationClass="com.intellij.xtextLanguage.xtext.XtextPairedBraceMatcher"/>
    <fileTypeFactory implementation="com.intellij.xtextLanguage.xtext.XtextFileTypeFactory"/>
    <lang.parserDefinition language="Xtext"
                           implementationClass="com.intellij.xtextLanguage.xtext.XtextParserDefinition"/>
    <lang.syntaxHighlighterFactory language="Xtext"
                                   implementationClass="com.intellij.xtextLanguage.xtext.XtextSyntaxHighlighterFactory"/>
    <completion.contributor language="Xtext"
                            implementationClass="com.intellij.xtextLanguage.xtext.XtextCompletionContributor"/>
    <psi.referenceContributor language="Xtext"
                              implementation="com.intellij.xtextLanguage.xtext.XtextReferenceContributor"/>
    <lang.refactoringSupport language="Xtext"
                             implementationClass="com.intellij.xtextLanguage.xtext.XtextRefactoringSupportProvider"/>
    <lang.findUsagesProvider language="Xtext"
                             implementationClass="com.intellij.xtextLanguage.xtext.XtextFindUsagesProvider"/>
    <lang.elementManipulator forClass="com.intellij.xtextLanguage.xtext.impl.XtextREFERENCEGrammarGrammarIDImpl"
                             implementationClass="com.intellij.xtextLanguage.xtext.psi.XtextREFERENCEGrammarGrammarIDManipulator"/>
    <lang.elementManipulator forClass="com.intellij.xtextLanguage.xtext.impl.XtextREFERENCEAbstractRuleRuleIDImpl"
                             implementationClass="com.intellij.xtextLanguage.xtext.psi.XtextREFERENCEAbstractRuleRuleIDManipulator"/>
    <lang.elementManipulator forClass="com.intellij.xtextLanguage.xtext.impl.XtextREFERENCEEPackageSTRINGImpl"
                             implementationClass="com.intellij.xtextLanguage.xtext.psi.XtextREFERENCEEPackageSTRINGManipulator"/>
    <lang.elementManipulator
            forClass="com.intellij.xtextLanguage.xtext.impl.XtextREFERENCEAbstractMetamodelDeclarationIDImpl"
            implementationClass="com.intellij.xtextLanguage.xtext.psi.XtextREFERENCEAbstractMetamodelDeclarationIDManipulator"/>
    <lang.elementManipulator forClass="com.intellij.xtextLanguage.xtext.impl.XtextREFERENCEEClassifierIDImpl"
                             implementationClass="com.intellij.xtextLanguage.xtext.psi.XtextREFERENCEEClassifierIDManipulator"/>
    <lang.elementManipulator forClass="com.intellij.xtextLanguage.xtext.impl.XtextREFERENCEParameterIDImpl"
                             implementationClass="com.intellij.xtextLanguage.xtext.psi.XtextREFERENCEParameterIDManipulator"/>
    <lang.elementManipulator forClass="com.intellij.xtextLanguage.xtext.impl.XtextREFERENCEEEnumLiteralIDImpl"
                             implementationClass="com.intellij.xtextLanguage.xtext.psi.XtextREFERENCEEEnumLiteralIDManipulator"/>
    <localInspection groupName="Xtext" language="Xtext" shortName="XtextInspection" displayName="Xtext inspection"
                     enabledByDefault="true"
                     implementationClass="com.intellij.xtextLanguage.xtext.inspection.XtextInspection"/>
    <localInspection groupName="Xtext" language="Xtext" shortName="XtextReferenceInspection"
                     displayName="Xtext reference inspection" enabledByDefault="true"
                     level="ERROR"
                     implementationClass="com.intellij.xtextLanguage.xtext.inspection.XtextReferencesInspection"/>


    <moduleType id="XTEXT_MODULE" implementationClass="com.intellij.module.XtextModuleType"/>
    <applicationService serviceInterface="com.intellij.xtextLanguage.xtext.EcorePackageRegistry"
                        serviceImplementation="com.intellij.xtextLanguage.xtext.EcorePackageRegistry$ListBasedRegistry"/>

    <externalProjectDataService implementation="com.intellij.module.OnSuccessImportGrammarKitLauncher"/>
  </extensions>


  <actions>
    <action id="Xtext.Generate.Action" class="com.intellij.action.GenerateAction"
            text="Generate fragments" description="Generate language support code">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>